<% include ../partials/header %>

<div id="cookbook-heading" class="container" style="padding-top: 50px;">

<% if (user_cookbooks) { %>
	<div class="container">
		<div class="row">
			<div class="col-lg-12" style="margin-bottom: 10px;">
				<h2 class="cookbook-title" style="display: inline-block;"> Your Cookbooks </h2>
				<button class="btn btn-danger" style="float: right;" data-toggle="modal" data-target="#addCookbookModal">Add Cookbook</button>
			</div>
		</div>
		<div class="row"> 

			<% user_cookbooks.forEach(function(cookbook) { %>
				<% var processed_name = cookbook.name.replace(/ /g,"_"); %>
				<a href="/cookbooks/<%= processed_name %>">
					<div class="col-lg-3">
						<div class="outerDiv" style="background: url('<%= cookbook.image_url %>'); background-size: cover; background-position: center;">
							<div class="innerDiv">
								<b><h2 style="font-size: 30px; text-shadow: 1px 1px 2px #000;"><%= cookbook.name %></h2></b>
								<p style="text-shadow: 1px 1px 2px #000;">by <%= cookbook.username %></p>
							</div>
						</div>
					</div>
				</a>
			<% }) %>

		</div>
<% } %>

		<div class="row">
			<div class="col-lg-12">
				<h2 class="cookbook-title"> Browse All Cookbooks </h2>
			</div>
		</div>
		<div class="row"> 

			<% all_cookbooks.forEach(function(cookbook) { %>
				<% var processed_name = cookbook.name.replace(/ /g,"_"); %>
				<a href="/cookbooks/<%= processed_name %>">
					<div class="col-lg-3 all-cookbooks-col">
						<div class="outerDiv" style="background: url('<%= cookbook.image_url %>'); background-size: cover; background-position: center; border-bottom: 5px solid #ddd;">
							<div class="innerDiv">
								<b><h2 style="font-size: 30px; text-shadow: 1px 1px 2px #000;"><%= cookbook.name %></h2></b>
								<p style="text-shadow: 1px 1px 2px #000;">by <%= cookbook.username %></p>
							</div>
						</div>
					</div>
				</a>
			<% }) %>

		</div>

<!-- Add Cookbook Modal -->
<div id="addCookbookModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-md">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create New Cookbook</h4>
      </div>
      <div class="modal-body">
		<form action="/cookbooks/create" method="post">

		    <label name="name">Cookbook Name</label>
		    <input type="text" name="name" value=""/>
			</br>

		    <label name="description">Description</label>
		    <input type="text" name="description" value=""/>    
		    </br>

		   	<label name="image_url">Image</label>
		    <input type="text" name="image_url" value=""/>    
		    </br>
		    <br/>
		    <button class="btn btn-warning" type="submit">Create New Cookbook</button>

		</form>
      </div>
    </div>

  </div>
</div>
